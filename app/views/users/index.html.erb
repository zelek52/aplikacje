<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name public</th>
      <th>Login</th>
      <th>Password</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone nr</th>
      <th>Joined date</th>
      <th>Last visit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_id %></td>
        <td><%= user.name_public %></td>
        <td><%= user.login %></td>
        <td><%= user.password %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_nr %></td>
        <td><%= user.joined_date %></td>
        <td><%= user.last_visit %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

